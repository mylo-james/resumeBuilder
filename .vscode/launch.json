{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/web/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--no-cache",
        "--watchAll=false",
        "${relativeFile}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}/apps/web",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "Debug API Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/api/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--no-cache",
        "--watchAll=false",
        "${relativeFile}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}/apps/api",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "Debug Shared Types Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/shared-types/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--no-cache",
        "--watchAll=false",
        "${relativeFile}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}/packages/shared-types",
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}
